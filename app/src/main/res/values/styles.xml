<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="themeName">themeDefault</item>
    </style>

    <style name="AppTheme.Dark">
        <item name="themeName">themeDark</item>
    </style>

    <!--Facebook login activity theme-->
    <style name="Translucent" parent="android:Theme.Translucent.NoTitleBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <attr name="fontDrawableColor" format="color" />
    <attr name="fontDrawableSize" format="dimension" />
    <attr name="fontDrawableBackgroundColor" format="color" />

    <declare-styleable name="fontDrawableView">
        <attr name="fontDrawable" />
        <attr name="fontDrawableColor" />
        <attr name="fontDrawableSize" />
    </declare-styleable>

    <style name="ScreenTitle">
        <item name="typeface">roboto_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="XplorToolbar">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.ActionBar</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="BodyBigTitle">
        <item name="typeface">roboto_light</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black_70</item>
    </style>

    <style name="BoldBodyBigTitle" parent="BodyBigTitle">
        <item name="typeface">roboto_medium</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="BodyText">
        <item name="typeface">roboto_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="BodyInstruction">
        <item name="typeface">roboto_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/textColorInstructions</item>
    </style>

    <style name="Button" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/shape_bg_btn_blue</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="typeface">roboto_regular</item>
        <item name="android:enabled">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="BoldTitle">
        <item name="typeface">roboto_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/textColor</item>
    </style>
</resources>
